<resources xmlns:tools="http://schemas.android.com/tools">


  <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
  </style>

  <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
<!--    <item name="android:background">@drawable/rectangle_top_round_white</item>-->
  </style>

  <style name="Color1SwitchStyle">
    <item name="colorControlActivated">@color/white</item>
  </style>

  <style name="switchTheme" parent="Theme.AppCompat.Light.NoActionBar">


    <!-- Active thumb color & Active track color(30% transparency) -->
<!--    <item name="colorControlActivated">@color/white</item>-->
<!--    &lt;!&ndash; Inactive thumb color &ndash;&gt;-->
<!--    <item name="colorSwitchThumbNormal">@color/switch_off</item>-->
    <!-- Inactive track color(30% transparency) -->
    <item name="android:colorForeground">@color/switch_off</item>
    ...
  </style>

  <style name="ButtonStyle" parent="TextAppearance.AppCompat.Caption">
    <item name="android:background">@color/colorAccent</item>
    <item name="android:textAllCaps">true</item>
    <item name="fontPath">@string/fonts_Lato_Bold</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="ToolbarSmallElevation">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?actionBarSize</item>
    <item name="android:elevation" tools:targetApi="lollipop">3dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
  </style>

  <style name="ToolbarNoElevation">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?actionBarSize</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
  </style>

  <style name="ToolbarIcon">
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:padding">10dp</item>
    <item name="android:scaleType">fitCenter</item>
  </style>

  <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/textTitleColor</item>
    <item name="fontPath">@string/fonts_Adobe_Garamond_Pro_Regular</item>
  </style>

  <style name="ToolbarMiddleIcon">
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:padding">10dp</item>
    <item name="android:scaleType">fitCenter</item>
  </style>

  <style name="Toolbar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?actionBarSize</item>
    <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
  </style>

  <style name="ToolbarBigIcon">
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:padding">10dp</item>
    <item name="android:scaleType">fitCenter</item>

  </style>

  <style name="TabStyle">
    <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
  </style>

  <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
    <item name="android:textSize">12sp</item>
    <item name="font">@string/fonts_Lato_Regular</item>
  </style>

  <style name="TextStyleEanFieldLabel">
    <item name="android:paddingLeft">@dimen/margin_small</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/orchid</item>
    <item name="fontPath" tools:ignore="MissingPrefix">@string/fonts_Lato_Bold</item>
    <item name="android:textSize">@dimen/text_size_tiny</item>
    <item name="android:letterSpacing" tools:targetApi="lollipop">0.1</item>
  </style>

  <style name="TextStyleEanFieldValue">
    <item name="android:paddingLeft">@dimen/margin_small</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="fontPath" tools:ignore="MissingPrefix">@string/fonts_Lato_Medium</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
  </style>

  <style name="TextStyleEanFieldBoldLabel">
    <item name="android:paddingLeft">@dimen/margin_small</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/orchid</item>
    <item name="fontPath" tools:ignore="MissingPrefix">@string/fonts_Lato_Bold</item>
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:letterSpacing" tools:targetApi="lollipop">0.05</item>
  </style>

  <style name="TextStyleDateHint">
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/textColorGrey</item>
    <item name="fontPath" tools:ignore="MissingPrefix">@string/fonts_Lato_Medium</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
  </style>

  <style name="TextStyleDate">
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="fontPath" tools:ignore="MissingPrefix">@string/fonts_Lato_Medium</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
  </style>

  <style name="TextStyleFieldLabel">
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/orchid</item>
    <item name="fontPath" tools:ignore="MissingPrefix">@string/fonts_Lato_Bold</item>
    <item name="android:textSize">@dimen/text_size_tiny</item>
    <item name="android:letterSpacing" tools:targetApi="lollipop">0.1</item>
  </style>


</resources>