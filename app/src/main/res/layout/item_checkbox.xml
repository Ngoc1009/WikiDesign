<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contrainItemCheckbox"
    >

    <TextView
        android:id="@+id/tvRecommended"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/filter_sort_recommended"
        android:textAlignment="textStart"
        android:textColor="@color/high_black"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="18dp" />

    <CheckBox
        android:id="@+id/cbRecommended"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:width="1dp"
        android:button="@drawable/checkbox_custom_transaction"
        android:buttonTint="@color/high_black"
        android:clickable="true"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>